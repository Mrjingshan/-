.container {
  background: #fff;
}

.form {
  width: 728rpx;
  margin-left: 22rpx;
}

.form .formItem {
  height: 85rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.itemTitle {
  width: 160rpx;
  float: left;
  font-size: 32rpx;
  color: #333;
  line-height: 85rpx;
}

.itemInput {
  width: 568rpx;
  height: 100%;
  margin-left: 160rpx;
}

.itemInput>input {
  width: 100%;
  height: 100%;
  line-height: 85rpx;
  font-size: 30rpx;
  color: #666;
}

.formBtn {
  width: 620rpx;
  height: 78rpx;
  background: #e51a24;
  border-radius: 10rpx;
  line-height: 78rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  margin: 170rpx auto 0;
}

.formTip {
  width: 620rpx;
  margin: 26rpx auto 0;
  font-size: 28rpx;
  color: #999;
  line-height: 40rpx;
}
