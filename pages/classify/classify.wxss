.nav::-webkit-scrollbar {
  display: none;
}
page {
  height: 100%;
  background: #f5f5f5;
}
.nav {
  height: 111rpx;
  width: 100%;
  box-sizing: border-box;
  line-height: 111rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  color: #333;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}
.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
}

.nav-item.active text {
  font-size: 32rpx;
  line-height: 47rpx;
  padding: 8rpx 20rpx;
  color: #d00408;
  background: #FFFFFF;
  border-radius: 24px;
}
.classifyContent{
  position: fixed;
  top: 111rpx;
  left: 0;
  right: 0;
  bottom: 0;
}
.classify-box {
  width: 94%;
  height: auto;
  margin: 0 2.3% 0 3.7%;
  column-count: 2;
  column-gap: 10rpx;
  padding: 23rpx 0 20rpx;
  background: #f5f5f5;
  -webkit-overflow-scrolling: touch;
}
.content-item {
  /* width: 335rpx;
  break-inside: avoid;
  box-sizing: border-box;
  border-radius: 8rpx;
  background: #fff;
  margin-bottom: 20rpx; */
  background: #fff;
  width: 320rpx;
  display: inline-block; /*内部卡片需要设置为inline-block,否则会截断显示，如图一*/
  justify-content: center;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 15rpx;
  margin-bottom: 10rpx;
}
.content-item:nth-child(2n){
  border: 1rpx solid red;
}
.content-item-con {
  width: 100%;
}
.content-item-con image {
  width: 100%;
}
.c-item-con-footer {
  width: 97%;
  padding: 0 0 20rpx 3%;
  border-radius: 0 0 8rpx 8rpx;
}

.footer-name {
  width: 100%;
  height: 80rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  padding: 18rpx 0 0 0;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #666666;
}

.footer-name text {
  color: #666;
  font-size: 28rpx;
  line-height: 32rpx;
  margin-left: 18rpx;
}

.footer-price {
  width: 98%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #030000;
  margin: 20rpx 0 0 2%;
  overflow: hidden;
}
.footer-price>text{
  margin-left: 0;
}
.footer-price image {
  width: 36rpx;
  height: 36rpx;
  float: right;
  margin-right: 24rpx;
}
