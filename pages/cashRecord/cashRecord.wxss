.container {
  background: #fff;
  position: relative;
}

.head {
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  background: #f5f5f5;
}

.head>view {
  width: 648rpx;
  height: 100%;
  margin: 0 auto;
  display: flex;
}

.head>view>.item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.content>view {
  width: 710rpx;
  margin: 0 auto;
  display: flex;
  height: 80rpx;
  border-bottom: 1rpx solid #d8d8d8;
}

.tip {
  width: 630rpx;
  position: absolute;
  top: 518rpx;
  left: 68rpx;
  font-size: 28rpx;
  color: #999;
  line-height: 40rpx;
}

.content>view>.item {
  flex: 1;
  font-size: 30rpx;
  color: #666;
  line-height: 80rpx;
  text-align: center;
}
.content>view>.item.active {
  color: #333;
}
