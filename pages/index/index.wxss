}
.boutique_li_name{
  color: #030000;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 26rpx;
  overflow: hidden;
  margin-top: 20rpx;
}
.boutique_li_name text{
  float: right;
}
.boutique_li_name text.price_new{
  margin-left: 50rpx;
  color: #030000;
}