.container {
  background: #fff;
}

.head {
  width: 100%;
  height: 104rpx;
  background: #f5f5f5;
}

.headContent {
  width: 87%;
  height: 100%;
  margin: 0 auto;
  display: flex;
}

.headItem {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  line-height: 104rpx;
  position: relative;
}

.headItem.active {
  color: #e51a24;
}

.headItem.active::after {
  content: '';
  position: absolute;
  width: 150rpx;
  height: 6rpx;
  background: #e51a24;
  bottom: 0;
  left: 35rpx;
}

.incomeList {
  width: 100%;
}

.incomeLi {
  width: 710rpx;
  height: 150rpx;
  overflow: hidden;
  margin: 0 auto;
  border-bottom: 1rpx solid #d8d8d8;
}

.incomeLi:last-child {
  border-bottom: none;
}

.incomeLiLeft {
  width: 70%;
  height: 100%;
  float: left;
}

.incomeName {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: #333;
  margin-top: 31rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.incomeDate {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #999;
  margin-top: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.incomeLiRight {
  width: 29%;
  float: right;
  height: 100%;
  line-height: 150rpx;
  text-align: right;
  font-size: 32rpx;
  color: #333;
}
