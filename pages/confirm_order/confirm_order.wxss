/* pages/confirm_order/confirm_order.wxss */
page{
  background: #fff;
}
.confirm_box{
  width: 100%;
}
.confirm_address{
  width: 100%;
  height: 180rpx;
  display: flex;
  align-items: center;
  background: #fff;
}
.confirm_address_left{
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.confirm_address_existence_left{
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.confirm_address_existence_left image{
  width: 100%;
  height: 100%;
}
.confirm_address_existence_right{
  width: 16rpx;
  height: 26.2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.confirm_address_existence_right image{
  width: 100%;
  height: 100%;
}
.confirm_address_existence_center{
  width: 560rpx;
}
.confirm_address_existence_center_top{
  width: 560rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  color: #333333;
}
.confirm_address_existence_center_bottom{
  width: 560rpx;
  font-size: 14px;
  color: #333333;
  letter-spacing: 0.43px;
  line-height: 21px;
  margin-top: 20rpx;
}
.confirm_address_left image{
  width: 100%;
  height: 100%;
}
.confirm_address_right{
  width: 52rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
}
.confirm_address_right image{
  width: 100%;
  height: 100%;
}
.confirm_address_center{
  font-size: 14px;
  color: #666666;
  margin-left: 30rpx;
}
.confirm_list{
  width: 100%;
  background: #fff;
}
.confirm_goods{
  width: 100%;
  height: 260rpx;
  display: flex;
  background: #F5F5F5;
  box-sizing: border-box;
  padding: 20rpx;
}
.confirm_goods_left{
  width: 290rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border-radius: 3px;
  /* background: #ebebeb; */
}
.confirm_goods_left image{
  width: 100%;
  height: 100%;
}
.confirm_goods_right{
  flex-grow: 1;
  margin-left: 20rpx;
}
.confirm_goods_right_one{
  width: 100%;
  font-size: 16px;
  color: #333333;
  margin-top: 15rpx;
}
.confirm_goods_right_two{
  width: 100%;
  font-size: 13px;
  color: #666666;
  margin-top: 10rpx;
}
.confirm_goods_right_three{
  width: 100%;
  font-size: 14px;
  color: #353535;
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}
.confirm_goods_right_four{
  width: 100%;
  font-size: 17px;
  color: #333333;
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}
.confirm_Other{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 20rpx 0rpx 20rpx;
} 
.confirm_Other view{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.confirm_Other_one{
  font-size: 15px;
  color: #333333;
}
.confirm_Other_two{
  font-size: 15px;
  color: #898989;
  margin-top: 10rpx;
}
.confirm_Other_three{
  font-size: 15px;
  margin-top: 10rpx;
  color: #898989;
  border-bottom: solid 1px #f5f5f5;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}
.confirm_Remark{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-bottom: solid 10rpx #f5f5f5;
}
.confirm_Remark view:nth-child(1){
  font-size: 15px;
  color: #898989;
}
.confirm_Remark view:nth-child(2){
  flex-grow: 1;
  margin-left: 20rpx;
  width: 546rpx;
  height: 54rpx;
  background:#EFEFEF;
}
.confirm_Remark view:nth-child(2) input{
  font-size: 13px;
  color: #999999;
  margin-left: 20rpx;
}
.confirm_footer{
  position: fixed;
  width: 100%;
  height: 88rpx;
  left: 0;
  bottom: 0;
  display: flex;
  background: #fff;
  align-items: center;
  border-top: solid 1px #f1f1f1;
  background: #FFFFFF;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.50);
}
.confirm_footer view:nth-child(1){
  flex-grow: 1;
  height: 88rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 20rpx;
}
.confirm_footer view:nth-child(1) text:nth-child(1){
  font-size: 16px;
  color: #333333;
}
.confirm_footer view:nth-child(1) text:nth-child(2){
  font-size: 16px;
  color: #E51A24; 
  font-weight: bold;
}
.confirm_footer view:nth-child(2){
  width: 266rpx;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  color: #FFFFFF;
  font-weight: bold;
}
.bg{
  background: #E51A24;
}
.bg2{
  background: #ccc;
}
.confirm_address_existence{
  width: 100%;
  height: 260rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx;
}