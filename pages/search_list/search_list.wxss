/* pages/search_list/search_list.wxss */
.search_top{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background: #fff;
  display: flex;
  border-bottom: 1rpx solid #ebebeb;
}
.search_top_left{
  width: 592rpx;
  height: 56rpx;
  display: flex;
  background: #F5F5F5;
  border: 1rpx solid #E6E6EA;
  border-radius: 4px;
  align-items: center;
  box-sizing: border-box;
  padding: 0rpx 20rpx;
}
.search_top_left_img{
  width: 30rpx;
  height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search_top_left_img image{
  width: 100%;
  height: 100%;
}
.search_top_left_ipt{
  flex-grow: 1;
  font-size: 14px;
  color: #B2B2B2;
  margin-left: 20rpx;
}
.search_top_right{
  width: 96rpx;
  height: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(-132deg, #F9673D 0%, #E51A24 100%);
  border-radius: 4px;
  font-size: 16px;
  color: #FFFFFF;
  margin-left: 20rpx;
}
.search_list{
  column-count: 2;
  column-gap: 20rpx;
  margin-top: 20rpx;
  box-sizing:border-box;
  padding:0rpx 20rpx;
}
.search_list_li{
  background-color: #fff;
  break-inside: avoid;
  border: solid 1px #ebebeb;
  /* margin-top: 20rpx; */
}
.search_list_li image{
  width: 100%;
}
.sort_list_li_name{
  font-size: 15px;
  color: #151515;
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 10rpx;
  margin-top: -10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.sort_list_li_text{
  font-size: 12px;
  color: #999999;
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.sort_list_li_price{
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 18px;
  color: #E51A24;
}
.dataNone{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}
.dataNone image{
  width: 360rpx;
  height: 196rpx;
}
.dataNone view{
  font-size: 15px;
  color: #666666;
  margin-top: 40rpx;
}